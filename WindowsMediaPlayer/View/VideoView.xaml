<UserControl x:Class="WindowsMediaPlayer.View.VideoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowsMediaPlayer.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4.5*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>
        <ListView Grid.Row="0" Name="VideoListView" ItemsSource="{Binding VideoViewModel.VideoList}" MouseDoubleClick="ItemVideoList_DoubleClicked">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <StatusBarItem Grid.Row="1" HorizontalContentAlignment="Stretch">
            <Button Content="Open file" Command="{Binding VideoViewModel.OpenFileCommand}"/>
        </StatusBarItem>
    </Grid>
</UserControl>
