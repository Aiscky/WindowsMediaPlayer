<Window x:Class="WindowsMediaPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsMediaPlayer"
        xmlns:View="clr-namespace:WindowsMediaPlayer.View"
        mc:Ignorable="d"
        Title="WindowsMediaPlayer" Height="500" Width="700">
    <Grid>
        <TabControl x:Name="MainWindowTabControl">
            <TabItem Header="Playing">
                <View:PlayerView x:Name="PlayerView"/>
            </TabItem>
            <TabItem Header="Images">
                <View:ImageView x:Name="ImageView"/>
            </TabItem>
            <TabItem Header="Sounds">
                <View:MusicView x:Name="MusicView"/>
            </TabItem>
            <TabItem Header="Videos">
                <View:VideoView x:Name="VideoView"/>
            </TabItem>
            <TabItem Header="Playlists">
                <View:PlaylistView x:Name="PlaylistView"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
